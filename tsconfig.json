{
  "compilerOptions": {
    "target": "ESNext",                                  // Use the latest JavaScript features
    "module": "CommonJS",                                // Keep compatibility with Node.js
    "strict": true,                                      // Enable strict type-checking
    "esModuleInterop": true,                             // Improve compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,            // Ensure consistent file naming
    "skipLibCheck": true,                                // Skip type checking in declaration files
    "outDir": "./dist",                                  // Specify output directory for compiled files
    "rootDir": "./src",                                  // Specify root directory for source files
    "resolveJsonModule": true,                           // Enable importing .json files
    "moduleResolution": "node",                          // Use Node.js module resolution
    "allowSyntheticDefaultImports": true,               // Allow default imports even if not explicitly defined
    "isolatedModules": true                              // Ensure that each file can be transpiled in isolation
  },
  "include": ["src/**/*"],                               // Include all TypeScript files in the src folder
  "exclude": ["node_modules", "dist"]                   // Exclude unnecessary folders
}
